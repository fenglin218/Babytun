<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itlaoqi.babytun.dao.GoodsDetailDAO">
    <select id="findByGoodsId" parameterType="long" resultType="com.itlaoqi.babytun.entity.GoodsDetail">
        select * from t_goods_detail where goods_id = #{value} order by gd_order
    </select>
</mapper>